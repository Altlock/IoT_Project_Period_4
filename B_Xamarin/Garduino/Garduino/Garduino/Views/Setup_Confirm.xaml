<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ConfirmPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Jou gekozen groente is:" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Font="20,Bold"/>
            <Label x:Name="SelectVeg" Text="{Binding SelectVeg}"></Label>
            <Button Text="Ga terug" Clicked="Terug_Clicked"></Button>
            <Button Text="Ga verder" Clicked="Verder_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>